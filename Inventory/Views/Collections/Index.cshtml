@{
  Layout = "_Layout";
}

@using Inventory.Models;

@model List<Inventory.Models.Collection>;

<div class="card">
  <h1>Collections available to view:</h1>

  @if (Model.Count == 0)
  {
    <h3>No collections have been added yet!</h3>
  }

  @foreach(Collection collection in Model)
  {
    <li class="link">@Html.ActionLink($"{collection.Type}", "Details", new { id = collection.CollectionId })</li>
  }

  <div class="fake-button">
    <center><p class="link">@Html.ActionLink("Add new collection", "Create")</p></center>
  </div>
</div>